@model IEnumerable<Blog>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var blog in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@blog.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            @blog.Category?.Name | @blog.PublishDate.ToString("dd MMM yyyy")
                        </h6>
                        <p class="card-text">
                            @blog.Content.Substring(0, Math.Min(blog.Content.Length, 100))...
                        </p>
                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id" class="btn btn-outline-primary btn-sm">Detay</a>
                    </div>
                    <div class="card-footer text-muted small">
                        Yazar: @blog.User?.UserName
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">Bu kategoriye ait blog bulunamadı.</p>
}
