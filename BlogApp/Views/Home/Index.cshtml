@model IEnumerable<Blog>
@{
    var categories = ViewBag.Categories as List<Category>;
    var selectedId = ViewBag.SelectedCategoryId as int?;
}

<h2 class="mb-4">Blog Yazıları</h2>

<!-- Kategori Filtresi -->
<div class="mb-3">
    <a class="btn @(selectedId == null ? "btn-primary" : "btn-outline-primary")" asp-action="Index">Tümü</a>
    @foreach (var category in categories)
    {
        <a class="btn @(selectedId == category.Id ? "btn-primary" : "btn-outline-primary")"
           asp-action="Index" asp-route-categoryId="@category.Id">
            @category.Name
        </a>
    }
</div>

<!-- Blog Listesi -->
<div>
    @await Html.PartialAsync("_BlogList", Model)
</div>
