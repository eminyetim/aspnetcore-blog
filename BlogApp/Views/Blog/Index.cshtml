@model IEnumerable<Blog>

@{
    ViewData["Title"] = "Bloglar";
}

<h2>Bloglar</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Yeni Blog Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Yayın Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Title</td>
                <td>@blog.PublishDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@blog.Id">Detay</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@blog.Id">Düzenle</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@blog.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

