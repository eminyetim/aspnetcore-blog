@model Blog

@{
    ViewData["Title"] = Model.Title;
}

<div class="container my-4">
    <h2>@Model.Title</h2>
    <p class="text-muted">
        Yayın Tarihi: @Model.PublishDate.ToString("dd MMMM yyyy") <br />
        Kategori: <strong>@Model.Category?.Name</strong> <br />
        Yazar: <strong>@Model.User?.UserName</strong>
    </p>

    <hr />

    <p style="white-space: pre-line;">@Model.Content</p>

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-4">← Geri Dön</a>
</div>
